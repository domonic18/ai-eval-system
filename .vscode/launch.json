{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI 直接调试",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "apps.server.src.main:app",
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Celery 直接调试",
            "type": "python",
            "request": "launch",
            "program": "-m",
            "args": [
                "celery",
                "-A", "apps.server.src.celery_app:celery_app",
                "worker",
                "--loglevel=DEBUG",
                "--pool=solo"  // 使用单进程模式方便调试
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/apps/server/.env",
            "cwd": "${workspaceFolder}/apps/server"
        }
    ]
} 